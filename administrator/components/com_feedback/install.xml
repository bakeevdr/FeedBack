<?xml version="1.0" encoding="utf-8"?>
<extension 	type="component"	version="3.0"	method="upgrade">
	<name>COM_FEEDBACK</name> 
	<creationDate>2016.07.26</creationDate> <!-- Дата создания -->
	<author>Бакеев Д.Р.</author> <!-- Автор -->
	<authorEmail>BakeevDR@Gmail.com</authorEmail> <!-- Почта -->
	<copyright>Copyright (C) 2012 BakeevDR</copyright> <!-- Копирайт -->
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license> <!-- Лицензия -->
	<version>2016.07.26</version>
	<description>
		Отзовик
	</description>
	
	<!-- Установка таблиц компонента -->
	<install> 
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
 	<uninstall> 
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<!-- Медиа файлы -->
	<media destination="FeedBack" folder="media">
		<folder>images</folder>
		<folder>js</folder>
	</media>
	
	<!-- Файлы сайта -->
	<files folder="site">
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>feedback.php</filename>
	</files> 
	
	<!-- Языковой файл сайта -->
	<languages folder="site">
		<language tag="ru-RU">language/ru-RU.com_Feedback.ini</language>
		<language tag="ru-RU">language/ru-RU.com_Feedback.sys.ini</language>
	</languages>
	
	<!-- Файлы административной части -->
	<administration>
		<menu>COM_FEEDBACK</menu> 
		<submenu>
			<menu img="media/feedback/images/48x48/menu_Projects.png"	view="projects">COM_FEEDBACK_PROJECTS</menu>
			<menu img="media/feedback/images/48x48/menu_Statuses.png"	view="statuses">COM_FEEDBACK_STATUSES</menu>
			<menu img="media/feedback/images/48x48/menu_Types.png"		view="types">COM_FEEDBACK_TYPES</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>feedback.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="ru-RU">language/ru-RU.com_feedback.ini</language>
			<language tag="ru-RU">language/ru-RU.com_feedback.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<server type="collection" priority="1" name="Rosreestr Update Service">http://update.kadastr.ru/!Install/!update.xml</server>
	</updateservers>
</extension>